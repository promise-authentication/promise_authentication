<!DOCTYPE html>
<html>
  <head>
    <title><%= name %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content= "width=device-width, initial-scale=1.0"> 
    <link rel="icon" type="image/png" sizes="32x32" href="<%= image_url 'logo.png' %>">

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <style>
      <% if personal_data %>
        .button.primary {
          background-color: #<%= color %>;
          opacity: 0.9;
        }
        .button.primary:hover {
          background-color: #<%= color %>;
          opacity: 1;
        }
        .bg-uniq {
          background-color: #<%= color %>;
        }
        .text-uniq {
          color: #<%= color %>;
        }
      <% end %>
    </style>
  </head>
  <body class="">
    <%= content_for?(:content) ? yield(:content) : yield %>

    <% if personal_data %>
      <%= link_to letter, uniq_path, class: "m-1 py-1 px-2 text-white rounded font-mono text-xs font-bold fixed bottom-0 right-0 bg-uniq", style: 'cursor:help;', 'aria-label': "Your unique letter/number-color combination is #{letter} and #{color}" %>
    <% end %>
  </body>
</html>
