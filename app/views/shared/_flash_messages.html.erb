<% if flash[:info].present? %>
  <div class="w-full max-w-md mx-auto mt-4 px-6 sm:px-0">
    <div class="bg-blue-50 border border-blue-200 text-blue-700 px-4 py-3 rounded-lg relative" role="alert">
      <div class="flex items-center">
        <svg class="h-5 w-5 text-blue-400 mr-2 flex-shrink-0 mt-0.5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
        </svg>
        <span class="block sm:inline text-sm"><%= flash[:info] %></span>
      </div>
    </div>
  </div>
<% end %>

<% if flash[:error].present? %>
  <div class="w-full max-w-md mx-auto mt-4 px-6 sm:px-0">
    <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg relative" role="alert">
      <div class="flex items-center">
        <svg class="h-5 w-5 text-red-400 mr-2 flex-shrink-0 mt-0.5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
        </svg>
        <span class="block sm:inline text-sm"><%= flash[:error] %></span>
      </div>
    </div>
  </div>
<% end %>
