<%= content_for :header do %>
  <%= image_tag('logo.png', class: 'h-4 m-3') %>
  <h1 class="text-secondary">
    <%= name %>
  </h1>
<% end %>
<%= content_for :body do %>
  <%= form_tag password_path, class: 'w-full' do %>
    <div class="w-full flex items-center flex-col">
      <h2 class="text-2xl pt-8">
        <%= t '.header' %>
      </h2>
      <p class="text-secondary text-sm max-w-xs text-center mt-4">
        <%= t '.description', name: name %>
      </p>
      <label class="w-full mt-8">
        <% if @current_password_message.present? %>
          <p class="input-label font-bold">
            <%= @current_password_message %>
          </p>
          <div class="password-field-wrapper relative">
            <%= password_field_tag :current_password, nil, class: "login-input pr-10", autofocus: true %>
            <%= render 'shared/password_toggle' %>
          </div>
        <% else %>
          <p class="input-label">
            <%= t '.current_password' %>
          </p>
          <div class="password-field-wrapper relative">
            <%= password_field_tag :current_password, nil, class: "login-input pr-10" %>
            <%= render 'shared/password_toggle' %>
          </div>
        <% end %>
      </label>
      <label class="mt-3 w-full">
        <% if @new_password_message.present? %>
          <p class="input-label font-bold">
            <%= @new_password_message %>
          </p>
          <div class="password-field-wrapper relative">
            <%= password_field_tag :new_password, nil, class: "login-input pr-10", autofocus: true %>
            <%= render 'shared/password_toggle' %>
          </div>
        <% else %>
          <p class="input-label">
            <%= t '.new_password' %>
          </p>
          <div class="password-field-wrapper relative">
            <%= password_field_tag :new_password, nil, class: "login-input pr-10" %>
            <%= render 'shared/password_toggle' %>
          </div>
        <% end %>
      </label>
      <div class="flex w-full justify-end items-center mt-6">
        <%= button_tag type: 'submit', class: 'button primary self-end' do %>
          <%= t('.go_on') %><%= arrow_right %>
        <% end %>
      </div>
    </div>
  <% end %>
<% end %>
