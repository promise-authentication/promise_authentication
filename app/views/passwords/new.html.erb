<%= content_for :header do %>
  <%= image_tag('logo.png', class: 'h-4 m-3') %>
  <h1 class="">
    <%= name %>
  </h1>
<% end %>
<%= content_for :body do %>
  <%= form_tag recover_password_path(login_configuration), class: 'w-full' do %>
    <div class="w-full flex items-center flex-col">
      <h2 class="text-2xl pt-8">
        <%= t '.header' %>
      </h2>
      <p class="text-secondary text-sm max-w-xs text-center mt-4">
        <%= t '.description', name: name %>
      </p>
      <label class="mt-3 w-full">
        <p class="input-label">
          <%= t '.email' %>
        </p>
        <%= email_field_tag :email, registration_configuration[:email], class: "login-input", autofocus: true, required: true %>
      </label>
      <div class="mt-4">
        <%= turnstile_tag_html %>
      </div>
      <div class="flex w-full justify-end items-center mt-6">
        <%= back_to(registration_configuration) do |args| login_path(args) end %>
        <%= submit_tag (t('.go_on')+' &rarr;').html_safe, class: 'button primary self-end' %>
      </div>
    </div>
  <% end %>
<% end %>

