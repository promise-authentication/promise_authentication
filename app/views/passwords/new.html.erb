<%= content_for :head do %>
  <script src="https://challenges.cloudflare.com/turnstile/v0/api.js" async defer></script>
<% end %>
<%= content_for :header do %>
  <%= image_tag('logo.png', class: 'h-4 m-3') %>
  <h1 class="">
    <%= name %>
  </h1>
<% end %>
<%= content_for :body do %>
  <%= form_tag recover_password_path(login_configuration), class: 'w-full' do %>
    <div class="w-full flex items-center flex-col pb-10 px-6 sm:px-10">
      <h2 class="text-2xl pt-8">
        <%= t '.header' %>
      </h2>
      <p class="text-secondary text-sm max-w-xs text-center mt-4">
        <%= t '.description', name: name %>
      </p>
      <label class="mt-3 w-full">
        <p class="input-label">
          <%= t '.email' %>
        </p>
        <%= email_field_tag :email, nil, class: "login-input", autofocus: true, required: true %>
      </label>
      <div class="cf-turnstile mt-4" data-sitekey="<%= ENV.fetch('PROMISE_CLOUDFLARE_TURNSTILE_SITE_KEY', "3x00000000000000000000FF") %>"></div>
      <div class="flex w-full justify-end items-center mt-6">
        <%= link_to '&larr; '.html_safe + t('.cancel'), login_path(login_configuration), class: 'text-secondary pr-3' %>
        <%= submit_tag (t('.go_on')+' &rarr;').html_safe, class: 'button primary self-end' %>
      </div>
    </div>
  <% end %>
<% end %>

