<%= content_for :header do %>
  <%= image_tag('logo.png', class: 'h-4 m-3') %>
  <h1 class="text-gray-500">
    <%= name %>
  </h1>
<% end %>
<%= content_for :body do %>
  <%= form_tag password_path, class: 'w-full' do %>
    <div class="w-full flex items-center flex-col pb-10 px-6 sm:px-10">
      <h2 class="text-2xl pt-8">
        <%= t '.header' %>
      </h2>
      <p class="text-gray-600 text-sm max-w-xs text-center mt-4">
        <%= t '.description', name: name %>
      </p>
      <label class="w-full mt-8">
        <% if @current_password_message.present? %>
          <p class="input-label font-bold">
            <%= @current_password_message %>
          </p>
          <%= password_field_tag :current_password, nil, class: "login-input", autofocus: true %>
        <% else %>
          <p class="input-label">
            <%= t '.current_password' %>
          </p>
          <%= password_field_tag :current_password, nil, class: "login-input" %>
        <% end %>
      </label>
      <label class="mt-3 w-full">
        <% if @new_password_message.present? %>
          <p class="input-label font-bold">
            <%= @new_password_message %>
          </p>
          <%= password_field_tag :new_password, nil, class: "login-input", autofocus: true %>
        <% else %>
          <p class="input-label">
            <%= t '.new_password' %>
          </p>
          <%= password_field_tag :new_password, nil, class: "login-input" %>
        <% end %>
      </label>
      <div class="flex w-full justify-end items-center mt-6">
        <%= submit_tag (t('.go_on')+' &rarr;').html_safe, class: 'button primary self-end' %>
      </div>
    </div>
  <% end %>
<% end %>
