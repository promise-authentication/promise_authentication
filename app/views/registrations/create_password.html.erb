<%= content_for :body do %>
  <%= form_tag create_password_registrations_path(registration_configuration), class: 'w-full' do %>
    <div class="w-full flex items-center flex-col pb-10 px-6 sm:px-10">
      <div class="flex flex-row justify-between border-b pb-3 mb-5 w-full pt-8 items-center">
        <h2 class="text-base sm:text-lg text-primary font-bold leading-none">
          <%= relying_party&.name ? t('.login_at_html', name: relying_party.name) : t('.login') %>
        </h2>
        <a href="javascript:void(toggleDescription());" class="flex flex-row items-center space-x-1">
          <%= image_tag('logo.png', class: 'h-4' ) %>
            <span
              class=" bg-clip-text text-transparent bg-gradient-to-t from-blue-900 to-blue-500 tracking-tight text-base font-bold">
              Promise
            </span>
        </a>
      </div>

      <a href="javascript:void(toggleDescription());" class="block text-primary max-w-xs text-center mt-4">
        <%= t '.create_account', email: registration_configuration[:email] %>
        <% if relying_party %>
          <svg class="h-5 mb-1 inline-block" fill="currentColor" viewBox="0 0 20 20"><path d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-8-3a1 1 0 00-.867.5 1 1 0 11-1.731-1A3 3 0 0113 8a3.001 3.001 0 01-2 2.83V11a1 1 0 11-2 0v-1a1 1 0 011-1 1 1 0 100-2zm0 8a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" fill-rule="evenodd"></path></svg>
        <% end %>
      </a>

      <div class="w-full flex flex-col bg-blue-50 px-4 rounded-lg mt-6 pb-4 shadow relative">
        <a href="javascript:void(toggleDescription());"
          class="absolute w-8 h-8 rounded-full bg-blue-50 -top-3 left-1/2 -translate-x-1/2 flex items-center justify-center">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
            stroke="currentColor" class="w-5 h-5 text-blue-700/20">
            <path stroke-linecap="round" stroke-linejoin="round"
              d="M9 12.75 11.25 15 15 9.75m-3-7.036A11.959 11.959 0 0 1 3.598 6 11.99 11.99 0 0 0 3 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285Z" />
          </svg>
        </a>
        <%= render partial: "toggable_description" %>
        <label class="mt-10 w-full">
          <p class="input-label">
            Password
          </p>
          <%= password_field_tag :password, nil, class: "login-input", autofocus: true , tabindex: 1 %>
          <p class="text-secondary text-xs mt-1">
            <%= t '.we_save_no_data_html' %>
          </p>
        </label>
        <label class="flex justify-start items-center w-full cursor-pointer pb-2 mt-4">
          <%= check_box_tag :remember_me, nil, flash[:remember_me], tabindex: 1, class: "rounded" %>
          <span class="ml-2">
            <%= t(".remember_me") %>
          </span>
        </label>
        <div class="flex w-full justify-end items-center mt-3">
          <%= link_to '&larr; '.html_safe + t('.cancel'), verify_email_registrations_path(registration_configuration), class: 'text-secondary pr-3' %>
          <%= submit_tag (t('.go_on')+' &rarr;').html_safe, class: 'button primary', tabindex: 1, data: { 'disable-with' => t('.going_html') } %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
